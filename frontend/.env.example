# =============================================================================
# ATS Frontend Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL
# For development (default):
VITE_API_URL=http://localhost:8000

# For production, use your actual backend URL:
# VITE_API_URL=https://api.yourdomain.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application title and branding
VITE_APP_TITLE=ATS System
VITE_APP_DESCRIPTION=Modern Applicant Tracking System

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true

# =============================================================================
# API SETTINGS
# =============================================================================
# API request timeout (milliseconds)
VITE_API_TIMEOUT=30000

# API retry settings
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Maximum file size for uploads (bytes)
VITE_MAX_FILE_SIZE=10485760  # 10MB

# Allowed file types for resume uploads
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt

# =============================================================================
# UI/UX SETTINGS
# =============================================================================
# Pagination settings
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# Toast notification duration (milliseconds)
VITE_TOAST_DURATION=5000

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Analytics tracking
VITE_ANALYTICS_ENABLED=false
VITE_GOOGLE_ANALYTICS_ID=

# Error tracking
VITE_SENTRY_DSN=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only for development environment
VITE_DEBUG_MODE=false
VITE_SHOW_API_LOGS=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production deployment:
# VITE_API_URL=https://your-production-api.com
# VITE_DEBUG_MODE=false
# VITE_ANALYTICS_ENABLED=true
# Configure proper error tracking
# Set up analytics if needed
