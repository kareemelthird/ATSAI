# =============================================================================
# ATS Backend Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ats_db

# For production, use a more secure connection string:
# DATABASE_URL=postgresql://username:password@your-db-host:5432/ats_db

# =============================================================================
# INITIAL ADMIN USER SETUP
# =============================================================================
# These credentials will be used to create the first admin user
# CHANGE THESE VALUES BEFORE FIRST RUN!
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=ChangeMe123!

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
# Groq API Key (get free tier at https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# AI Model to use (Groq models):
# - llama-3.2-3b-preview (fast, lightweight)
# - llama-3.1-8b-instant (balanced performance)
# - llama-3.1-70b-versatile (best quality)
AI_MODEL=llama-3.2-3b-preview

# AI Response Settings
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key for JWT tokens
# You can generate one with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Requirements
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
PROJECT_NAME=ATS System
ENVIRONMENT=development
DEBUG=false

# API Configuration
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8000

# File Upload Settings
UPLOAD_DIR=uploads/resumes
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
# For development:
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# For production, add your domain:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP settings for sending emails (notifications, password resets, etc.)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=ATS System

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# RATE LIMITING
# =============================================================================
# API rate limiting settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Application monitoring
SENTRY_DSN=
ANALYTICS_ENABLED=false

# =============================================================================
# CACHE CONFIGURATION (Optional)
# =============================================================================
# Redis cache settings (if using Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================
# Automated backup settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only use in development environment
RELOAD_ON_CHANGE=true
SHOW_SQL_QUERIES=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production deployment, also set:
# ENVIRONMENT=production
# DEBUG=false
# RELOAD_ON_CHANGE=false
# Use secure DATABASE_URL with SSL
# Use strong SECRET_KEY
# Configure proper ALLOWED_ORIGINS
# Enable HTTPS/SSL termination
# Set up proper logging and monitoring
